@{
    ViewData["Title"] = "Add Player";
}
@model PlayerViewModel
<h2>Add Player</h2>
<p>Add a player</p>

<form method="post" asp-controller="Players" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name" class="col-md-2">Name</label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BotUrl" class="col-md-2">Bot URL</label>
        <div class="col-md-10">
            <input asp-for="BotUrl" class="form-control"/>
        </div>
    </div>
    <input type="submit" value="Save Player"/>
</form>